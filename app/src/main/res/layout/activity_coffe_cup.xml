<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoffeCup">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Coffee Order App"
        android:textColor="@android:color/holo_red_light"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:fontFamily="serif-monospace" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:hint="Name please!"
        android:inputType="textPersonName"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText3"
        android:text="Toppings"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="151dp"
        android:onClick="checkBox1"
        android:text="Whipped Cream"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox"
        android:onClick="checkBox1"
        android:text="Chocolate"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/textView3"
        android:onClick="Sub2"
        android:text="-"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/editText3"
        android:text="Quantity"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button13"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/checkBox2"
        android:onClick="Add2"
        android:text="+" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button12"
        android:layout_centerHorizontal="true"
        android:text="Order Summary"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Order Now!"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editText10"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/textView13"
        android:layout_toEndOf="@+id/textView5"
        android:ems="10"
        android:inputType="none"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText11"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/button14"
        android:layout_toEndOf="@+id/textView5"
        android:ems="10"
        android:inputType="none"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_toEndOf="@+id/textView5"
        android:ems="10"
        android:inputType="none"
        android:text="0"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="71dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText8"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="35dp"
        android:layout_height="31dp"
        android:layout_alignBottom="@+id/editText7"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="241dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="172dp"
        android:text="Coffee"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="241dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="125dp"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="239dp"
        android:layout_height="35dp"
        android:layout_above="@+id/button14"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="43dp"
        android:layout_height="33dp"
        android:layout_above="@+id/button14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="43dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignTop="@+id/textView13" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="43dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editText9"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/button12"
        android:text="Pay us"
        android:textStyle="bold" />
    <fragment
        android:name="com.bolt.appdev.myapplication.CoffeCup$ExFrag"
        android:id="@+id/frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>